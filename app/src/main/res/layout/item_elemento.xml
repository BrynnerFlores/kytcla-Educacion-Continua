<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/Grey400"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapeable_image_view_elemento_imagen"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/material_text_view_elemento_titulo"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/Grey300"
            app:strokeWidth="1dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/material_text_view_elemento_titulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/baloo"
            android:maxLines="2"
            android:textColor="@color/Grey700"
            app:layout_constraintBottom_toTopOf="@+id/material_text_view_elemento_subtitulo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/shapeable_image_view_elemento_imagen"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/material_text_view_elemento_subtitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/material_text_view_elemento_tiempo"
            app:layout_constraintEnd_toEndOf="@+id/material_text_view_elemento_titulo"
            app:layout_constraintStart_toStartOf="@+id/material_text_view_elemento_titulo"
            app:layout_constraintTop_toBottomOf="@+id/material_text_view_elemento_titulo" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/material_text_view_elemento_tiempo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="11sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/material_text_view_elemento_subtitulo"
            app:layout_constraintStart_toStartOf="@+id/material_text_view_elemento_subtitulo"
            app:layout_constraintTop_toBottomOf="@+id/material_text_view_elemento_subtitulo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>